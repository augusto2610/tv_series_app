<?xml version="1.0" encoding="utf-8"?>
<resources>

    <!-- Basic app theme -->
    <style name="appTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/black</item>
        <item name="colorSecondary">@color/main_text_color</item>
    </style>

    <style name="genreTextViewStyle">
        <item name="android:textSize">@dimen/item_genre_text_size</item>
        <item name="android:background">@drawable/genre_tv_background</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="errorMessageStyle">
        <item name="android:textColor">@color/main_text_color</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">@dimen/error_message_text_size</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="tvSerieBackdropStyle">
        <item name="saturation">0</item>
        <item name="warmth">1</item>
        <item name="round">3dp</item>
    </style>

</resources>